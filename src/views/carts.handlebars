<style>
    body {
        background-color: #f8f9fa;
    }

    .card-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .custom-card {
        width: 300px;
        border: 1px solid #e2e2e2;
        border-radius: 10px;
        box-shadow: 0px 0px 15px 0px rgba(0, 0, 0, 0.1);
    }

    .custom-card .card-img-top {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        height: 200px;
        object-fit: cover;
    }

    .custom-card .card-body {
        padding: 20px;
    }

    .custom-card .card-title {
        font-size: 1.5rem;
        color: #333;
    }

    .custom-card .card-text {
        font-size: 1rem;
        color: #666;
    }

    .custom-card .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .custom-card .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>

<div class="card-wrapper">
    {{#each cart.products}}
    <div class="custom-card">
        <img src="{{this.product.thumbnail}}" class="card-img-top" alt="Producto">
        <div class="card-body">
            <h5 class="card-title">{{this.product.title}}</h5>
            <p class="card-text">{{this.product.description}}</p>
            <p class="card-text">Stock: {{this.product.stock}}</p>
            <p class="card-text">Precio: {{this.product.price}}</p>
        </div>
    </div>
    {{/each}}
</div>